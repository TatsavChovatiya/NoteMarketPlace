@model NotesMarketplace.Models.ChangePassword
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/Member.cshtml";
}

<!-- Change Password Form -->
<section id="my-background">
    <div id="changepasswordpage" class="container">

        <!-- Logo -->
        <div class="row justify-content-center">
            <div id="loginlogo" class="text-center col-md-6 col-12 col-sm-12">
                <img src="~/Content/images/pre-login/top-logo.png" class="img-fluid" alt="Loin">
            </div>
        </div>

        <!-- Form -->
        <div class="row justify-content-center">

            <div class="col-12 col-md-12 col-sm-11 col-lg-9 col-xl-8">
                <div id="changepasswordform">

                    <!-- Head Section -->
                    <div id="changepassword-head" class="text-center">
                        <h2>Change Password</h2>
                        <p>Enter your new password to change your password</p>
                    </div>

                    <!-- Form -->
                    <form class="changpassword" method="post">
                        <!-- Password 1-->
                        <div class="form-group">
                            <label class="mylabel">Old Password</label>
                            <div class="wrapper">
                                @*<input  type="password" class="form-control InputPassword1 pe1" placeholder="Enter your old password">*@
                                @Html.TextBoxFor(m => m.OldPassword, new { @type = "password", @class = "form-control InputPassword1 pe1", @placeholder = "Enter your old password" })
                                <img class="pass-eye1" src="~/Content/images/pre-login/eye.png" alt="Show">
                            </div>
                            @Html.ValidationMessageFor(m => m.OldPassword)
                            <span class="field-validation-error">@ViewBag.error</span>
                        </div>

                        <!-- Password 2-->
                        <div class="form-group">
                            <label class="mylabel">New Password</label>
                            <div class="wrapper">
                                @*<input type="password" class="form-control InputPassword1 pe2" placeholder="Enter your new password">*@
                                @Html.TextBoxFor(m => m.Password, new { @type = "password", @class = "form-control InputPassword1 pe2", @placeholder = "Enter your new password" })
                                <img class="pass-eye2" src="~/Content/images/pre-login/eye.png" alt="Show">
                            </div>
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>

                        <!-- Password 3-->
                        <div class="form-group">
                            <label class="mylabel">Confirm Password</label>
                            <div class="wrapper">
                                @*<input type="password" class="form-control InputPassword1 pe3" placeholder="Enter your confirm password">*@
                                @Html.TextBoxFor(m => m.Password2, new { @type = "password", @class = "form-control InputPassword1 pe3", @placeholder = "Enter your confirm password" })
                                <img class="pass-eye3" src="~/Content/images/pre-login/eye.png" alt="Show">
                            </div>
                            @Html.ValidationMessageFor(m => m.Password2)
                        </div>
                        <!-- Login Button -->
                        <button type="submit" class="btn text-uppercase text-center" id="mybtn"><b>Submit</b></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Change Password Form End -->
