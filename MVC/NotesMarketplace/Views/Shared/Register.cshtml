<!DOCTYPE html>
<html lang="en">

<head>

    <!-- important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width-device-width, initial-scale=1">

    <!-- Title -->
    <title>@ViewBag.Title</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="@Url.Content("~/Content/images/favicon/favicon.ico")">


    <!-- Google Fonts -->
    <link href="@Url.Content("https://fonts.googleapis.com/css2?family=Open+Sans:s@300;400;600;700&display=swap")" rel="stylesheet">

    <link href="~/Content/css/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    @Styles.Render("~/Content/css/bootstrap/bootstrap.min.css")

    <!-- Custome CSS -->
    @Styles.Render("~/Content/css/style.css")

    <!-- Responsive CSS -->
    @Styles.Render("~/Content/css/responsive.css")


</head>

<body data-target=".navbar">

    @{
        String pageclass;
        if (ViewBag.HomePage == "true")
        {
            pageclass = "navbar fixed-top navbar-expand-lg white-navbar navbar-movable";
        }
        else
        {
            pageclass = "navbar fixed-top navbar-expand-lg white-nav-top white-navbar";
        }
    }

    <!-- Header -->
    <header>
        <nav class="@pageclass">
            <div class="container">

                <div class="navbar-header">

                    <!-- Mobile Menu Open Button -->
                    <span id="mobile-nav-open-btn">&#9776;</span>

                    <!-- Logo -->
                    @if (ViewBag.HomePage == "true")
                    {
                        <a class="navbar-brand" href="@Url.Action("Home", "Home")"><img class="img-fluid" src="~/Content/images/pre-login/top-logo.png"></a>
                    }
                    else
                    {
                        <a class="navbar-brand" href="@Url.Action("Home", "Home")"><img class="img-fluid" src="~/Content/images/pre-login/Capture.png"></a>
                    }

                </div>

                <!-- Main Menu -->
                <div class="collapse navbar-collapse justify-content-end default-header" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @Html.ActionLink("Search Notes", "Search", "Home", null, new { @class = "nav-link " + ViewBag.activelink_search })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Sell Your Notes", "Dashboard", "Home", null, new { @class = "nav-link " + ViewBag.activelink_sellnote })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Buyer Requests", "BuyerRequests", "Home", null, new { @class = "nav-link " + ViewBag.activelink_buyerrequest })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("FAQ", "FAQ", "Home", null, new { @class = "nav-link " + ViewBag.activelink_faq })
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Contact Us", "ContactUs", "Home", null, new { @class = "nav-link " + ViewBag.activelink_contactus })
                        </li>

                        <li class="nav-item">
                            <div class="userprofile-user-icon dropdown">
                                  
                                <a class="dopointer" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="~/Uploads/ProfilePicture/@NotesMarketplace.MyClass.Register_id.profilepicture" class="img-fluid rounded-circle" alt="User"></a>
                                    
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="@Url.Action("UserProfile", "Home")">My Profile</a>
                                    <a class="dropdown-item" href="@Url.Action("DownloadedNote", "Home")">My Downloads</a>
                                    <a class="dropdown-item" href="@Url.Action("SoldNotes", "Home")">My Sold Notes</a>
                                    <a class="dropdown-item" href="@Url.Action("RejectedNotes", "Home")">My Rejected Notes</a>
                                    <a class="dropdown-item" href="@Url.Action("ChangePassword", "Home")">Change Password</a>
                                    <a class="dropdown-item givecolor" href="@Url.Action("LogOut", "Home")">LOGOUT</a>
                                </div>
                            </div>

                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Logout", "LogOut", "Home", null, new { @class = "nav-link", @id = "mynavbtn", @role = "button" })
                        </li>
                    </ul>
                </div>
                <!-- Mobile Menu -->
                <div id="mobile-nav">
                    <!-- Mobile Menu Close Button -->
                    <span id="mobile-nav-close-btn">&times;</span>

                    <div id="mobile-nav-content">
                        <ul class="navbar-nav">
                            <li>
                                @Html.ActionLink("Search Notes", "Search", "Home", null, new { @class = ViewBag.activelink_search })
                            </li>
                            <li>
                                @Html.ActionLink("Sell Your Notes", "Dashboard", "Home", null, new { @class = ViewBag.activelink_sellnote })
                            </li>
                            <li>
                                @Html.ActionLink("Buyer Requests", "BuyerRequests", "Home", null, new { @class = ViewBag.activelink_buyerrequest })
                            </li>
                            <li>
                                @Html.ActionLink("FAQ", "FAQ", "Home", null, new { @class = ViewBag.activelink_faq })
                            </li>

                            <li>
                                @Html.ActionLink("Contact Us", "ContactUs", "Home", null, new { @class = ViewBag.activelink_contactus })
                            </li>
                            <li>
                                <div class="dropdown dowhiteonhower">
                                  
                                    <a id="dropdownMenuLink" class="dopointer" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="~/Uploads/ProfilePicture/@NotesMarketplace.MyClass.Register_id.profilepicture" class="img-fluid rounded-circle" alt="User"></a>
                                    <div class="dropdown-menu text-center" aria-labelledby="dropdownMenuLink">
                                        <div class="col-12"><a class="dropdown-item" href="@Url.Action("UserProfile", "Home")">My Profile</a></div>
                                        <div class="col-12"><a class="dropdown-item" href="@Url.Action("DownloadedNote", "Home")">My Downloads</a></div>
                                        <div class="col-12"><a class="dropdown-item" href="@Url.Action("SoldNotes", "Home")">My Sold Notes</a></div>
                                        <div class="col-12"><a class="dropdown-item" href="@Url.Action("RejectedNotes", "Home")">My Rejected Notes</a></div>
                                        <div class="col-12"><a class="dropdown-item" href="@Url.Action("ChangePassword", "Home")">Change Password</a></div>
                                        <div class="col-12"><a class="dropdown-item givecolor" href="@Url.Action("LogOut", "Home")">LOGOUT</a></div>
                                    </div>
                                </div>
                            </li>
                            <li>
                                @Html.ActionLink("Logout", "LogOut", "Home", null, new { @class = "btn text-cente", @id = "mynavbtn", @role = "button" })
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <!-- Header Ends -->

    @RenderBody()
    <footer>
        <div class="aaa">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-12">

                        <p>
                            Copyright &copy; Tatvasoft All Rights Reserved.
                        </p>

                    </div>
                    <div class="col-md-6 col-12 text-right">

                        <ul class="social-list">
                            <li><a href="@Url.Action("Login","Home")"><i class="fa fa-facebook-f"></i></a></li>
                            <li><a href=""><i class="fa fa-twitter"></i></a></li>
                            <li><a href=""><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/mypopper")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/myscript")

</body>
</html>


