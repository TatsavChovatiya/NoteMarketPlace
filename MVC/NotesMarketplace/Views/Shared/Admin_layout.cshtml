<!DOCTYPE html>
<html lang="en">

<head>

    <!-- important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width-device-width, initial-scale=1">

    <!-- Title -->
    <title>@ViewBag.title</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Admin_Content/images/favicon/favicon.ico">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Admin_Content/css/bootstrap/bootstrap.min.css">

    <!-- Font Awsome -->
    <link rel="stylesheet" href="~/Admin_Content/css/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Admin_Content/css/font-awesome/fontawesome-free-5.15.1-web/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/Admin_Content/css/font-awesome/fontawesome-free-5.15.1-web/css/brands.css">
    <link rel="stylesheet" href="~/Admin_Content/css/font-awesome/fontawesome-free-5.15.1-web/css/solid.css">

    <!-- Custome CSS -->
    <link rel="stylesheet" href="~/Admin_Content/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Admin_Content/css/responsive.css">

</head>

<body data-target=".navbar">

    <!-- Header -->
    <header>
        <nav class="navbar fixed-top navbar-expand-lg white-nav-top white-navbar">
            <div class="container">

                <div class="navbar-header">

                    <!-- Mobile Menu Open Button -->
                    <span id="mobile-nav-open-btn">&#9776;</span>

                    <!-- Logo -->
                    <a class="navbar-brand" href="@Url.Action("Dashboard","Admin")"><img class="img-fluid" src="~/Admin_Content/images/pre-login/Capture.png"></a>
                </div>

                <!-- Main Menu -->
                <div class="collapse navbar-collapse justify-content-end default-header" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @ViewBag.dashboard" href="@Url.Action("Dashboard","Admin")"><span>Dashboard</span></a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link @ViewBag.notes" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><span>Notes</span></a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="@Url.Action("NoteUnderReview","Admin")">Notes Under Review</a>
                                <a class="dropdown-item" href="@Url.Action("PublishedNotes","Admin")">Published Notes</a>
                                <a class="dropdown-item" href="@Url.Action("DownloadedNotes","Admin")">Downloaded Notes</a>
                                <a class="dropdown-item" href="@Url.Action("RejectedNotes","Admin")">Rejected Notes</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ViewBag.member" href="@Url.Action("Members","Admin")"><span>Members</span></a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link @ViewBag.report" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><span>Reports</span></a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="@Url.Action("SpamReports","Admin")">Spam Reports</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link @ViewBag.managepage" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><span>Settings</span></a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                @if (NotesMarketplace.MyClass.Register_id.issuperadmin)
                                {
                                    <a class="dropdown-item" href="@Url.Action("ManageSystemConfiguration", "Admin")">Manage System Configuration</a>
                                    <a class="dropdown-item" href="@Url.Action("ManageAdministrator", "Admin")">Manage Administrator</a>
                                }
                                <a class="dropdown-item" href="@Url.Action("ManageCategory","Admin")">Manage Category</a>
                                <a class="dropdown-item" href="@Url.Action("ManageType","Admin")">Manage Type</a>
                                <a class="dropdown-item" href="@Url.Action("ManageCountry","Admin")">Manage Countries</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="userprofile-user-icon dropdown">
                                <a role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"> <img src="~/Uploads/ProfilePicture/@NotesMarketplace.MyClass.Register_id.profilepicture" class="img-fluid rounded-circle" alt="User"></a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="@Url.Action("MyProfile","Admin")">Update Profile</a>
                                    <a class="dropdown-item" href="@Url.Action("ChangePassword", "Admin")">Change Password</a>
                                    <a class="dropdown-item givecolor" href="@Url.Action("LogOut","Admin")">LOGOUT</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("LogOut","Admin")" id="mynavbtn">Logout</a>
                        </li>
                    </ul>
                </div>

                <!-- Mobile Menu -->
                <div id="mobile-nav">
                    <!-- Mobile Menu Close Button -->
                    <span id="mobile-nav-close-btn">&times;</span>

                    <div id="mobile-nav-content">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link @ViewBag.dashboard" href="@Url.Action("Dashboard","Admin")"><span>Dashboard</span></a>
                            </li>
                            <li class="nav-item dropdown">

                                <a class="nav-link @ViewBag.notes" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><span>Notes</span></a>
                                <div class="dropdown-menu  text-center" aria-labelledby="dropdownMenuLink">
                                    <div class="col-12">
                                        <a class="dropdown-item" href="@Url.Action("NoteUnderReview","Admin")">Notes Under Review</a>
                                    </div>
                                    <div class="col-12">
                                        <a class="dropdown-item" href="@Url.Action("PublishedNotes","Admin")">Published Notes</a>
                                    </div>
                                    <div class="col-12">
                                        <a class="dropdown-item" href="@Url.Action("DownloadedNotes","Admin")">Downloaded Notes</a>
                                    </div>
                                    <div class="col-12">
                                        <a class="dropdown-item" href="@Url.Action("RejectedNotes","Admin")">Rejected Notes</a>
                                    </div>
                                </div>

                            </li>
                            <li class="nav-item">
                                <a class="nav-link @ViewBag.member" href="@Url.Action("Members","Admin")"><span>Members</span></a>
                            </li>
                            <li class="nav-item dropdown">

                                <a class="nav-link @ViewBag.report" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><span>Reports</span></a>
                                <div class="dropdown-menu  text-center" aria-labelledby="dropdownMenuLink">
                                    <div class="col-12">
                                        <a class="dropdown-item" href="@Url.Action("SpamReports","Admin")">Spam Reports</a>
                                    </div>
                                </div>

                            </li>
                            <li class="nav-item dropdown">

                                <a class="nav-link @ViewBag.managepage" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><span>Settings</span></a>
                                <div class="dropdown-menu  text-center" aria-labelledby="dropdownMenuLink">
                                    @if (NotesMarketplace.MyClass.Register_id.issuperadmin)
                                    {
                                        <div class="col-12">
                                            <a class="dropdown-item" href="@Url.Action("ManageSystemConfiguration", "Admin")">Manage System Configuration</a>
                                        </div>
                                        <div class="col-12">
                                            <a class="dropdown-item" href="@Url.Action("ManageAdministrator", "Admin")">Manage Administrator</a>
                                        </div>
                                    }
                                    <div class="col-12">
                                        <a class="dropdown-item" href="@Url.Action("ManageCategory","Admin")">Manage Category</a>
                                    </div>
                                    <div class="col-12">
                                        <a class="dropdown-item" href="@Url.Action("ManageType","Admin")">Manage Type</a>
                                    </div>
                                    <div class="col-12">
                                        <a class="dropdown-item" href="@Url.Action("ManageCountry","Admin")">Manage Countries</a>
                                    </div>
                                </div>

                            </li>
                            <li class="nav-item">
                                <div class="dropdown">
                                    <a role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"> <img src="~/Admin_Content/images/user-profile/team-1.jpg" class="img-fluid rounded-circle" alt="User"></a>
                                    <div class="dropdown-menu  text-center" aria-labelledby="dropdownMenuLink">
                                        <div class="col-12">
                                            <a class="dropdown-item" href="@Url.Action("MyProfile","Admin")">Update Profile</a>
                                        </div>
                                        <div class="col-12">
                                            <a class="dropdown-item" href="@Url.Action("ChangePassword", "Admin")">Change Password</a>
                                        </div>
                                        <div class="col-12">
                                            <a class="dropdown-item givecolor" href="@Url.Action("LogOut","Admin")">LOGOUT</a>
                                        </div>
                                    </div>
                                </div>

                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("LogOut","Admin")" id="mynavbtn">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <!-- Header Ends -->

    @RenderBody()

    <footer>
        <div class="aaa">
            <div class="container">
                <div class="row">
                    <div class="col-4 col-md-6">
                        <p>
                            Version : 1.1.24
                        </p>
                    </div>
                    <div class="col-8 col-md-6 text-right">
                        <p>
                            Copyright &copy; Tatvasoft All Rights Reserved.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- JQuery -->
    <script src="~/Admin_Content/js/jquery.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <!-- Popper -->
    <script src="~/Admin_Content/js/popper.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Admin_Content/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Admin_Content/js/script.js"></script>
</body>

</html>
